"""
docker-compose:用来定义和运行多容器Docker应用程序工具
"""

# 1.目录结构

# django项目目录
AntiFraud
    Dockerfile
    start.sh
    ...
# nginx目录
nginx
    Dockerfile
    nginx.conf


# 2.项目Dockerfile内容
FROM ubuntu:16.04
RUN apt-get -y update  # 更新软件源
RUN apt-get install -y python-dev python-pip
RUN apt-get install -y python-setuptools
RUN apt-get install -y libmysqlclient-dev
RUN mkdir /AntiFraud  # 创建目录
WORKDIR /AntiFraud    # 设置工作目录
ADD . /AntiFraud      # 将当前目录(上下文路径)内容加入
RUN pip install -r requirements.txt
EXPOSE  80 8080 8000
ENV SPIDER=/AntiFraud # 设置环境变量

# 3.项目start.sh内容
#!/bin/bash
python manage.py collectstatic --noinput &&
python manage.py migrate &&
uwsgi --ini uwsgi.ini

# 4.nginx Dockerfile内容
FROM nginx
EXPOSE 80 8000
RUN rm /etc/nginx/conf.d/default.conf
ADD nginx.conf /etc/nginx/conf.d/
RUN mkdir -p /usr/share/nginx/html/static
RUN mkdir -p /usr/share/nginx/html/media

# 5.nginx.conf内容
server {
    listen 80;
    server_name 127.0.0.1;
    charset utf-8;
    location /media {
        alias /use/share/nginx/html/media;
    }
    location /static {
        alias /user/share/nginx/html/static;
    }
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_pass http://web:8000;
    }
}
# 6.docker-compose.yml
version: "3"
services:
    db:
        image: mysql
        environment:
            MYSQL_DATABASE: AntiFraud
            MYSQL_ROOT_PASSWORD: abc123
        volumes:
          - "/srv/db:/var/lib/mysql"
        restart: always
    redis:
        image: redis
        restart: always
    web:
        build: ./AntiFraud
        ports:
          - "8000:8000"
        volumes:
          - "./AntiFraud:/AntiFraud"
          - "tmp/logs:/tmp"
        command: bash start.sh
        links:
          - redis
          - db
        depends_on:
          - db
        restart:always
    nginx:
        build: ./nginx
        ports:
          - "80:80"
        volumes:
          - ./AntiFraud/static:/usr/share/nginx/html/static:ro
          - ./AntiFraud/media:/user/share/nginx/html/mdeia:ro
        links:
          - web
        depends_on:
          - web
        restart: always